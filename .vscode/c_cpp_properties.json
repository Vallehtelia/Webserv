// This file configures intelliSense to target linux
{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
				"/usr/include",
				"/usr/local/include",
				"/usr/lib/gcc/x86_64-linux-gnu/9/include",
				"/usr/include/x86_64-linux-gnu"
            ],
            "defines": [
                "__linux__"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}
